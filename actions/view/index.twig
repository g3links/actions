<html class="appbackground">
    <head>
        <title>{{ pagetitle }}</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" >
<!--        <meta name="viewport" content="width=device-width, initial-scale=1"> -->

        <link rel="shortcut icon" href="{{ host }}g3links.ico" type="image/x-icon" >
        <script src="{{ host }}model/script/g3frames.js"></script>
        <script src="{{ host }}model/script/divsplit.js"></script>
        <link rel="stylesheet" type="text/css" href="{{ host }}theme/css/divsplit.css" >

    </head>

    <body class="application" >

        <script>
            $(document).ready(function () {
                initListeners();
                loadstartup_page();
            });

            {% if not showstartpage %} 
            setInterval(function () {
                autoloadpage();
            }, 900000); // autoload() after 15 minutes 
            function autoloadpage() {
                console.log('auto-refresh g3menu')
                document.getElementById('g3menu').contentWindow.location.reload();
            }
            {% endif %} 

            function loadstartup_page()
            {
                $('#welcomepage').hide();

            {% if showstartpage %} 
                // custom startup page
                console.log('load startup page')
                $('#welcomepage').show();
                document.getElementById('welcomepage').src = '{{ welcomepage }}';
            {% endif %} 
            }

        </script>

        <div class="container" >
            <iframe class="mainmenu mainmenucolor" id="g3menu"></iframe>
            <div class="container" id="snap" ></div>
            <div class="containercolumn" >
                <div id="tabs" class="paneltabs"></div>
                <div id="apps"></div>
                <div id="panels" class="container">
                </div>
            </div>

            {% if showstartpage %} 
                <iframe class="startupPage" id="welcomepage"></iframe>
                {% endif %} 
        </div>

        <div id="message"></div>

        <div id="floatform" class="modalFloat modalFloat-content" hidden></div>
    </body>
</html>
