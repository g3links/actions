<script>

    var modaluser = document.getElementById('user');

    $(document).ready(function () {
        document.getElementById('cmod').addEventListener('click', function () {
            getSpan();
        });
    });

</script>

<div id="user" class="modalUser">
    <div class="modalUser-content">
        <span id="cmod" class="modal-close" ></span>

        <label class="titleName">{{ lbl_filter }}</label>

        <form action="{{ filteredviewroute }}" method="post" onsubmit="closeForm();">
            <div  class="marginbig">
                {% for filterview in filterviews %}
                    <input id="v-{{ filterview.idview }}" type="checkbox" name="v-{{ filterview.idview }}" {% if filterview.on %}checked{% endif %} >
                    <label for="v-{{ filterview.idview }}">{{ filterview.name }}</label><br>
                {% endfor %}
            </div>
            <div id="submitpnl" class="center" >
                <input id="submit" type="submit" value="{{ lbl_submit }}" >
            </div>
        </form>
    </div>

</div>
