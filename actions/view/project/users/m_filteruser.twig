<script>

    var modaluser = document.getElementById("user");

    $(document).ready(function () {
        openUserGroupSelection();

        document.getElementById("cmod").addEventListener("click", function () {
            getSpan();
        });
    });

    async function openUserGroupSelection() {
        let response = await fetch("{{ getfilteredusersroute }}");
        $("#actionrendermembers").html(await response.text());
    }

</script>

<div id="user" class="modalUser">
    <div class="modalUser-content">
        <span id="cmod" class="modal-close" ></span>
        <label class="titleName">{{ lbl_filter }}</label>

        <form action="{{ filteredroute }}" method="post" onsubmit="closeForm();">
            <p>
            <div id="actionrendermembers" ></div>
            </p>
            <br>
            <p id="submitpnl" class="center" >
                <input id="submit" type="submit" value="{{ lbl_submit }}" >
            </p>

        </form>
    </div>

</div>
